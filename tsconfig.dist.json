{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": true,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": false,
        "rootDir": "src",
        "baseUrl": "src",
        "removeComments": true,
        "outDir": "dist",
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
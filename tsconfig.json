{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "build",
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}